<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.BASE" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!--  Primary brand color.  -->
        <item name="colorPrimary">@color/zen_blue</item>
        <item name="colorOnPrimary">@color/white</item>

        <!--  Secondary brand color.  -->
        <item name="colorSecondary">@color/zen_blue_50_zen_oxford</item>
        <item name="colorOnSecondary">@color/white</item>

        <!--  Customize your theme here.  -->
        <item name="android:textColorPrimary">@color/zen_oxford</item>
        <item name="android:textColorSecondary">@color/zen_oxford_40_zen_cotton</item>

        <!--  Status bar color.  -->
        <item name="android:statusBarColor">?attr/colorSecondary</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:windowTranslucentStatus">true</item>

        <!--  Window  -->
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@color/zen_cotton</item>
        <item name="android:windowIsTranslucent">false</item>
        <item name="android:windowTranslucentNavigation">true</item>

    </style>

</resources>